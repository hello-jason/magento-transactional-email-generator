tr
  td
    table.info cellpadding="0" cellspacing="0" border="0" width="100%"
      thead
        tr
          th Voucher Information:
      tbody
        tr
          td width="50%" valign="top"
            ul
              li To: #{magento_friend_name}
              li From: #{magento_sender_name}
              li Expiration: None
              li Message: #{magento_message}

          td#expirationNote width="50%"
            h1#expirationNote #{magento_voucher_balance}
            small#expirationNote Use before expiration date.  Not redeemable for cash. This voucher can only be redeemed at <a href="#{magento_store_url}">#{magento_store_name}</a>
        tr
          td#pinkBox colspan="2"
              h1#redemptionCode Redemption Code: #{magento_redemption_code}
